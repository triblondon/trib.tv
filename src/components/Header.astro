---
import { Image } from 'astro:assets';
import barCodeImage from '../assets/images/barcode.svg';
import TickBoxItem from './TickBoxItem.astro';

const links = [
    { path: '/', title: "Home" },
    { path: '/about/', title: "About" },
    { path: '/cv/', title: "Resume" },
    { path: '/posts/', title: "Posts", includeSubPaths: true }
]

const thisPath = Astro.url.pathname.replace(/\/$/, '');
const isActivePath = (pathStr: string, includeSubPaths?: boolean) => (pathStr.replace(/\/$/, '') === thisPath || (includeSubPaths && thisPath.startsWith(pathStr.replace(/\/$/, '')+'/')))

---
<style>
header {
    width: 100%;
    max-width: 1200px;
    margin: 20px auto;
    padding: 0 10px;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    h1 {
        font-family: "Geo", system-ui;
        font-weight: 500;
        padding-left: 10px;
        margin-left: 10px;
        border-left: 1px dotted white;
        line-height: 1;
        img {
            height: 10px;
            width: 173px;
            margin-bottom: 10px;
            display: block;
        }
    }
    ul {
        list-style-type: none;
        display: flex;
        flex-flow: row wrap;
        gap: 5px;
        font-family: "Geo", system-ui;
        font-size: 1.1em;
        li.current {
            font-weight: bold;
            text-decoration: underline;
        }
    }
}
</style>
<header class="block-links">
    <h1>
        <Image src={barCodeImage} layout="none" alt="My phone number as a Code-128 barcode" title="If you can scan this, you can call me" />
        <a class='name' href="/">Andrew Betts</a>
    </h1>
    <ul>
        {links.map(link => isActivePath(link.path, link.includeSubPaths) ? (
            <li class="current"><TickBoxItem isChecked isOnDark>{link.title}</TickBoxItem></li>
        ) : (
            <li><TickBoxItem isOnDark href={link.path}>{link.title}</TickBoxItem></li>
        ))}
    </ul>
</header>

